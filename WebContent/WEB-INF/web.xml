	<servlet>
		<servlet-name>AdminServlet</servlet-name>
		<servlet-class>com.admin.controller.AdminServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AdminServlet</servlet-name>
		<url-pattern>/admin/admin.do</url-pattern>
	</servlet-mapping>
	
		<servlet>
		<servlet-name>BackLoginHandler</servlet-name>
		<servlet-class>com.admin.controller.BackLoginHandler</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BackLoginHandler</servlet-name>
		<url-pattern>/backLoginHandler</url-pattern>
	</servlet-mapping>


